#include <stdio.h>
#include <stdlib.h>

int main() {
    int *ptr;
    int i;
    ptr = (int *)malloc(2 * sizeof(int));
    printf("Enter 2 numbers:\n");
    for (i = 0; i < 2; i++) {
        scanf("%d", &ptr[i]);
    }
    ptr = (int *)realloc(ptr, 4 * sizeof(int));
    printf("Enter 2 more numbers:\n");
    for (i = 2; i < 4; i++) {
        scanf("%d", &ptr[i]);
    }
    printf("Numbers are: ");
    for (i = 0; i < 4; i++) {
        printf("%d ", ptr[i]);
    }
   free(ptr);
}

