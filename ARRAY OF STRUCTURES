#include<stdio.h>
struct employee{
    char name[20];
    int age;
    float salary;
};
int main(){
    int i, n;
    printf("Enter the value of n\n");
    scanf("%d",&n);
    struct employee empl[n];
    for(int i=0;i<n;i++){
        printf("Enter the details of employee\n");
        printf("Name : ");
        scanf("%s",&empl[i].name);
        printf("Age : ");
        scanf("%d",&empl[i].age);
        printf("Salary : ");
        scanf("%f",&empl[i].salary);
    }
    printf("\nEmployee Details\n");
    for(i=0;i<n;i++){
        printf("Name:%s\n",empl[i].name);
        printf("Age :%d\n",empl[i].age);
        printf("Salary :%f\n",empl[i].salary);
    }
}
